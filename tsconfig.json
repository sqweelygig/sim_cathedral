{
	"compilerOptions": {
		"jsx": "react",
		"lib": [
			"es6",
			"dom"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"outDir": "dist",
		"preserveConstEnums": false,
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDir": "src",
		"sourceMap": false,
		"strictNullChecks": true,
		"target": "es6"
	},
	"include": [
		"src/**/*"
	]
}
